<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proyecto01.luis.proyecto01.LugarActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/fotoLugar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/descripcion_imagen_lugar"
            app:srcCompat="@android:drawable/screen_background_dark" />

        <TextView
            android:id="@+id/descripcion_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/fotoLugar"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/ver_mas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ver_mas"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/descripcion_lugar"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/boton_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enviar"
            android:layout_below="@+id/ver_mas"
            android:layout_marginTop="1dp"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</android.widget.ScrollView>
